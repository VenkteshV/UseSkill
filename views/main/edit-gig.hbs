
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="overview">
        <h2 class="text-center">Shout out your Skills!</h2>
        <br />
        <div class="new-gig-card">
          <form method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label>Skill Title</label>
              {{#if gig}}

              <input type="text" class="form-control"  name="gig_title" value="{{gig.title}}" rqeuired>
              {{else}}
              <input type="text" class="form-control"  name="gig_title" required>
              {{/if}}
            </div>

            <div class="form-group">
              <label>Base Price</label>
              {{#if gig}}
                <input type="text" class="form-control" placeholder="₹300" name="gig_price" value="{{gig.price}}" required>
                {{else}}
              <input type="text" class="form-control" placeholder="₹300" name="gig_price" required>
              {{/if}}
            </div>
            <div class="form-group">
              <label>Previous Work</label>
              <input type="file" name="myimages" ></input>
            </div>


            <div class="form-group">
              <label>Skill category</label>
              {{#if gig}}
              <select id="category" class=" selectpicker form-control display_category"  name="gig_category" >
                <option value="">{{gig.category}}</option>
              {{#each categories}}
                <option {{id}}>{{name}}</option>
                {{/each}}
              </select>
              {{else}}
              <select id="category" class=" selectpicker form-control"  name="gig_category" >
                <option value="">Select Category</option>
              {{#each categories}}
                <option {{id}}>{{name}}</option>
                {{/each}}
              </select>
              {{/if}}
            </div>

            <div class="form-group sub-category">
              <label>Sub category</label>

              <select id ="sub_categories" class ="form-control" name="gig_sub_category" >
              <option value="">{{gig.subcategory.data}}</option>
              </select>
            </div>

            <div class="form-group level">
              <label>Skill Level</label>
              {{#if gig}}
              <select id ="skill_level" class=" selectpicker form-control display_skill_level" name="gig_level" value="{{gig.subcategory.level}}">
                <option>Beginner</option>
                <option>Intermediate</option>
                <option>Expert</option>
              </select>
              {{else}}
              <select id="skill_level" class=" selectpicker form-control" name="gig_level" required>
                <option>Beginner</option>
                <option>Intermediate</option>
                <option>Expert</option>
              </select>
              {{/if}}
            </div>

            <div class="form-group input-group-lg">
              <label>Describe your Skill</label>
              {{#if gig}}
              <input type="text" class="form-control" placeholder="I have lot of experience in..." value="{{gig.about}}" name="gig_about">
              {{else}}
              <input type="text" class="form-control" placeholder="I have lot of experience in..." name="gig_about">
              {{/if}}
            </div>

            <button type="submit" class="btn btn-success btn-lg">Add Skill</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="/js/editskill.js"></script>
<script src="/js/dropdown.js"></script>
